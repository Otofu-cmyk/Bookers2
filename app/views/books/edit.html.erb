<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj<br>from being saved:</h3>
  <% @book.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
  <label for="inputBody">Opinion</label>
  <%= f.text_field :body, id:"inputBody", placeholder:"意見"%>
  <%= f.submit "Update Book" %>
<% end %>
<%= link_to "Show" , book_path(@book.id) %>
<%= link_to "Back" , books_path %>
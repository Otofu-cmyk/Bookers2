<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/mypage', user: @book_user %>
      <%= render 'books/new', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
<table class="table table-striped">
  <tr>
    <td>
      <%= link_to user_path(@book_user.id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
      <% end %>
      <%= link_to @book_user.name , user_path(@book_user.id) %>
    </td>
    <td>
      <%= link_to book_path(@book.id) do %>
        <%= @book.title %>
      <% end %>
    </td>
    <td><%= @book.body %></td>
    <!--いかにリンクを入れる-->
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Edit" , edit_book_path(@book.id) %>
      <% end %>
    </td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
    </td>
  </tr>
</table>
    </div>
  </div>
</div>
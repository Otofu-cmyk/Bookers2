<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/8e782a552a.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render 'layouts/notifications' %>

    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to root_path do %>
            <span>
              Bookers
            </span>
          <% end %>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <% if user_signed_in? %>
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                    <%= link_to user_path(current_user.id), class: 'nav-link text-dark' do %>
                      <div class="social" style="display: inline-block;"><i class="fas fa-home"></i></div>
                      Home
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to users_path, class: 'nav-link text-dark' do %>
                      <div class="social" style="display: inline-block;"><i class="fas fa-users"></i></div>
                       Users
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to books_path, class: 'nav-link text-dark' do %>
                      <div class="social" style="display: inline-block;"><i class="fas fa-book-open"></i></div>
                       Books
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
                      <div class="social" style="display: inline-block;"><i class="fas fa-sign-out-alt"></i></div>
                       logout
                    <% end %>
                  </li>
                </ul>
                <% else %>
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                    <%= link_to root_path, class: 'nav-link text-dark' do %>
                      <div class="social" style="display: inline-block;"><i class="fas fa-home"></i></div>
                      Home
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to home_about_path, class: 'nav-link text-dark' do %>
                      <div class="social" style="display: inline-block;"><i class="fas fa-link"></i></div>
                       About
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                      <div class="social" style="display: inline-block;"><i class="fas fa-user-plus"></i></div>
                       sign up
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                      <div class="social" style="display: inline-block;"><i class="fas fa-sign-in-alt"></i></div>
                       login
                    <% end %>
                  </li>
                </ul>
                <% end %>
            </div>
        </div>
      </nav>
    </header>
    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
